    ViewBag.Title = "Nieuw";
}

<h2>Nieuw</h2>
 <div data-role="collapsible-set">

	<div data-role="collapsible" data-collapsed="false">
   <h3>Klant selecteren</h3>
    <ul data-role="listview"   data-filter="true" data-theme="d" data-divider-theme="d" class="ui-listview">
		
